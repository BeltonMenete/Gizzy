@{
    ViewData["Title"] = "Delete";
}
@model Instructor;

<form action="" method="post">
    <input asp-for="Id" hidden>
    <div class="mb-3">
        <label asp-for="FirstName">First Name</label>
        <input class="form-control" type="text" asp-for="FirstName" disabled>
    </div>
    <div class="mb-3">
        <label asp-for="LastName">Last Name</label>
        <input class="form-control" type="number" class="form-control" asp-for="LastName" disabled>
    </div>
    <div class="mb-3">
        <button class="btn btn-danger" type="submit">Delete</button>
        <button class="btn btn-outline-secondary" asp-action="Index" type="submit">Cancel</button>
    </div>
</form>